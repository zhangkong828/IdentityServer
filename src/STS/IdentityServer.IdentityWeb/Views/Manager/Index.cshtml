@model IdentityServer.Service.Dtos.Identity.UserIdentityDto
@{
    ViewData["Title"] = "个人信息";
}

<div class="row">
    <div class="col-lg-2">
        <img-gravatar email="@Model.Email" class="img-thumbnail" size="150" />
    </div>
    <div class="col-sm-10">
        <form method="post">
            <div class="form-group">
                <label for="Username">用户名</label>
                <input class="form-control" type="text" id="Username" name="Username" value="@Model.Username">
            </div>
            <div class="form-group">
                <label for="NickName">昵称</label>
                <input class="form-control" type="text" id="NickName" name="NickName" value="@Model.NickName">
            </div>
            <div class="form-group">
                <label for="Email">邮箱</label>
                <input class="form-control" type="text" id="Email" name="Email" value="@Model.Email">
            </div>
            <div class="form-group">
                <label for="PhoneNumber">手机号</label>
                <input class="form-control" type="text" id="PhoneNumber" name="PhoneNumber" value="@Model.PhoneNumber">
            </div>
            <div class="form-group">
                <label for="LastLoginIp">最后登录IP</label>
                <input class="form-control" type="text" id="LastLoginIp" name="LastLoginIp" value="@Model.LastLoginIp">
            </div>
            <div class="form-group">
                <label for="LastLoginTime">最后登录时间</label>
                <input class="form-control" type="text" id="LastLoginTime" name="LastLoginTime" value="@Model.LastLoginTime">
            </div>
            @*<button type="submit" class="btn btn-primary">保存</button>*@
        </form>
    </div>
</div>

