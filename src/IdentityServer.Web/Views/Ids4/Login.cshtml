@model LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>登录 - 统一认证授权中心</title>
    <link href="~/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <!-- Logo-->
                <div class="row text-center">
                    <i class="glyphicon glyphicon-cloud login-logo center-block" style="display: inline-block;"></i>
                </div>
                <div class="tab-content">
                    <!-- 登录-->
                    <div class="tab-pane fade active in" id="Login">
                        <form method="post" class="c-login">
                            <input type="hidden" name="ReturnUrl" value="@Model.ReturnUrl" />
                            <span class="heading text-primary">登录</span>
                            <div class="validation-summary-valid" data-valmsg-summary="true" style="color:red">
                                @ViewBag.Error
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="username" name="username" placeholder="账号/邮箱/手机号    测试账号:test" value="@Model.UserName" autocomplete="off">
                                <i class="glyphicon glyphicon-user"></i>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" id="password" name="password" value="@Model.Password" placeholder="密码   测试密码:123456" autocomplete="off">
                                <i class="glyphicon glyphicon-lock"></i>
                            </div>
                            <div class="form-group clear-fix">
                                <div class="main-checkbox">
                                    <input type="checkbox" value="true" id="remember" name="remember">
                                    <label for="remember"></label>
                                </div>
                                <label class="text text-primary" for="remember">记住我</label>
                                <div style="display: inline-block; margin-top: 5px; float: right;">
                                    <a href="#Register" data-toggle="tab" style="margin-left: auto; margin-right: auto;position: static; font-size: 15px; margin-top: 5px;" aria-expanded="true">
                                        <span>我要注册</span>
                                    </a>
                                </div>
                                <button type="submit" class="btn btn-default" style="margin: 5px 0 15px 0;width: 100%;">登录</button>
                            </div>
                            <h4 class="header blue lighter bigger">
                                <i class="ace-icon fa fa-coffee green"></i>

                            </h4>
                            <div class="space-6"></div>
                        </form>
                    </div>

                    <!-- 注册-->
                    <div class="tab-pane fade" id="Register">
                        <form  class="c-login" method="post">
                            <div class="validation-summary-valid" data-valmsg-summary="true">
                                <ul>
                                    <li style="display:none"></li>
                                </ul>
                            </div>
                            <span class="heading text-primary">注册</span>
                            <div class="form-group">
                                <input type="text" class="form-control" id="reg_nickname" name="nickname" placeholder="昵称" autocomplete="off">
                                <i class="glyphicon glyphicon-th"></i>
                            </div>
                            <div class="form-group">
                                <input type="text" class="form-control" id="reg_username" name="username" placeholder="账号/邮箱" autocomplete="off">
                                <i class="glyphicon glyphicon-user"></i>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" id="reg_password" name="password" placeholder="密码" autocomplete="off">
                                <i class="glyphicon glyphicon-lock"></i>
                            </div>
                            <div class="form-group">
                                <input type="password" class="form-control" id="reg_password2" name="password2" placeholder="重复密码" autocomplete="off">
                                <i class="glyphicon glyphicon-lock"></i>
                            </div>
                            <div class="form-group text-center clear-fix">
                                <div style="display: inline-block; margin-top: 5px; float: left;">
                                    <a href="#Login" data-toggle="tab" style="margin-left: auto; margin-right: auto;position: static; font-size: 15px; margin-top: 5px;" aria-expanded="false">
                                        <span>回到登录</span>
                                    </a>
                                </div>
                                <button type="submit" class="btn btn-default text-center">注册</button>
                            </div>
                        </form>
                    </div>


                    <!-- 第三方登录 -->
                    <div class="text-center">
                        <div class="col-sm-12">
                            <p style="font-size: 22px; position: relative; display: inline-block;width: 100%">
                                <span style="height: 1px; position: absolute; background-color: #928f8f; width: 28%; top: 50%; left:65%;"></span>
                                第三方登录
                                <span style="height: 1px; position: absolute; background-color: #928f8f; width: 28%; top: 50%; right:65%;"></span>
                            </p>
                        </div>
                        <div class="row" style="padding: 0 0 0 0;">
                            <div class="form-group col-sm-12">
                                @if (Model.ExternalLoginList != null)
                                {
                                    foreach (var externalLogin in Model.ExternalLoginList)
                                    {
                                        <a href="@externalLogin.LoginUrl"><i class="glyphicon glyphicon-menu-right"></i>@externalLogin.DisplayName</a>
                                    }
                                }
                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <script src="~/assets/plugins/jquery/jquery-3.1.0.min.js"></script>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://cdn.bootcss.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <footer>
        <div style="margin-top:20px;" class="text-center">
            <span>&copy; @(DateTime.Now.Year)</span>
            <a href="https://izk.cloud" target="_blank">izk.cloud</a>
        </div>
    </footer>
</body>
</html>
