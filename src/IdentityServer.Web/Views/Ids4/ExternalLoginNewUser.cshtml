
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>设置昵称 - 登录 - 统一认证授权中心</title>
    <link href="~/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/login.css" rel="stylesheet" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-md-offset-3">
                <!-- Logo-->
                <div class="row text-center">
                    <img src="@ViewBag.AvatarUrl" class="img-circle login-logo center-block" />
                </div>
                <div class="tab-content">
                    <div class="tab-pane fade active in" id="Login">
                        <form method="post" class="c-login">
                            <input type="hidden" name="avatar" value="@ViewBag.AvatarUrl" />
                            <span class="heading text-primary" style=" margin-top: 20px; font-size: 20px; margin-bottom: 10px;">昵称</span>
                            <div class="form-group">
                                <input type="text" class="form-control" id="username" name="username" placeholder="昵称" value="@ViewBag.NickName" autocomplete="off" style="text-align:center;">
                            </div>

                            <div class="form-group clear-fix">
                                <button type="submit" class="btn btn-default" style="margin: 5px 0 15px 0;width: 100%;">登录</button>
                            </div>
                            <h4 class="header blue lighter bigger">
                                <i class="ace-icon fa fa-coffee green"></i>

                            </h4>
                            <div class="space-6"></div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/assets/plugins/jquery/jquery-3.1.0.min.js"></script>
    <script src="~/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="https://cdn.bootcss.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="https://cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <footer>
        <div style="margin-top:20px;" class="text-center">
            <span>&copy; @(DateTime.Now.Year)</span>
            <a href="https://izk.cloud" target="_blank">izk.cloud</a>
        </div>
    </footer>
</body>
</html>
